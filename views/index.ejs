<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            width: 100%;
            height: 100%;
        }

        .container {
            width: 100vw;
            height: 100vh;
            background-color: #28527a;
        }
    </style>
    <link rel="stylesheet" href="stylesheets/global.css">
    <link rel="stylesheet" href="stylesheets/style.css">
    <link rel="stylesheet" href="stylesheets/modal.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css"
        integrity="sha384-vSIIfh2YWi9wW0r9iZe7RJPrKwp6bG+s9QZMoITbCckVJqGCCRhc+ccxNcdpHuYu" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <title>Online Chat</title>
</head>

<body>
    <div class="container flex">

        <% if(locals.user){ %>
            <div class="modal_wrap flex">
                <div class="mask"></div>
                <div class="modal_contents">
                    <div class="modal_contents_wrap">
                        <div class="modal_title">
                            <span class="string"></span>
                        </div>
                        <div id="room_create" class="active_form active">
                            <div class="form_wrap flex">
                                <div class="textbox">
                                    <label class="textbox_label" for="password">비밀번호</label>
                                    <input type="password" name="password" class="password">
                                </div>
                                <div class="textbox">
                                    <label class="textbox_label" for="password_invalid">비밀번호 확인</label>
                                    <input type="password" name="password_invalid" class="password_invalid">
                                    <label class="password_checked" for="checked">
                                        <i class="fas fa-times-circle"></i>
                                    </label>
                                </div>
                                <div class="btn_wrap">
                                    <button id="action_create" class="btn action_btn" disabled="true">
                                        <span>생성하기</span>
                                    </button>
                                    <button id="close" class="btn">
                                        <span>닫기</span>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div id="room_attend" class="active_form">
                            <div class="form_wrap flex">
                                <div class="textbox">
                                    <label class="textbox_label" for="roomcode">방 코드</label>
                                    <input type="text" name="roomcode" class="roomcode">
                                </div>
                                <!-- <div class="textbox">
                                    <label class="textbox_label" for="password">비밀번호</label>
                                    <input type="password" name="password" class="password">
                                </div> -->

                                <div class="btn_wrap">
                                    <button id="action_attend" class="btn action_btn" disabled="true">
                                        <span>참여하기</span>
                                    </button>
                                    <button id="close" class="btn">
                                        <span>닫기</span>
                                    </button>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
            <% } %>
                <div class="box_wrap">
                    <% if(locals.user) { %>
                        <%- include('login/index') %>
                            <% }else{ %>
                                <a id="login" class="contents_box flex" href="/auth/google">

                                    <span>구글 로그인</span>
                                </a>

                                <% } %>
                </div>
    </div>
</body>
<script src="javascripts/types.js"></script>
<script src="javascripts/actions.js"></script>
<script src="javascripts/ui_events.js"></script>

</html>