<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            width: 100%;
            height: 100%;
        }

        .container {
            width: 100vw;
            height: 100vh;
            background: #0F2027;
            /* fallback for old browsers */
            background: -webkit-linear-gradient(to top, #2C5364, #203A43, #0F2027);
            /* Chrome 10-25, Safari 5.1-6 */
            background: linear-gradient(to top, #2C5364, #203A43, #0F2027);
            /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

        }
    </style>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css"
        integrity="sha384-vSIIfh2YWi9wW0r9iZe7RJPrKwp6bG+s9QZMoITbCckVJqGCCRhc+ccxNcdpHuYu" crossorigin="anonymous">
    <link rel="stylesheet" href="../stylesheets/global.css">
    <link rel="stylesheet" href="../stylesheets/style.css">
    <link rel="stylesheet" href="../stylesheets/modal.css">
    <link rel="stylesheet" href="../stylesheets/room.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.1.2/socket.io.js"
        integrity="sha512-YybopSVjZU0fe8TY4YDuQbP5bhwpGBE/T6eBUEZ0usM72IWBfWrgVI13qfX4V2A/W7Hdqnm7PIOYOwP9YHnICw=="
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script>
        const roomCode = "<%= roomCode %>";
        const owner = "<%= owner %>";
        const user = "<%= user %>"
    </script>
    <title>Online Chat</title>
</head>

<body>
    <div class=" container flex">
        <% if(locals.owner && locals.user && JSON.stringify(owner) !=JSON.stringify(user)){ %>
            <div class="modal_wrap flex visible">
                <div class="mask"></div>
                <div class="modal_contents">
                    <div class="modal_contents_wrap">
                        <div class="modal_title">
                            <span class="string">비밀번호를 입력 해 주세요.</span>
                        </div>
                        <div id="room_OK" class="active_form active">
                            <div class="form_wrap flex">
                                <div class="textbox">
                                    <label class="textbox_label" for="password">비밀번호</label>
                                    <input type="password" name="password" class="password">
                                </div>

                                <div class="btn_wrap">
                                    <button id="action_OK" class="btn action_btn" disabled="true">
                                        <span>참여하기</span>
                                    </button>
                                    <button id="close" class="btn">
                                        <span>닫기</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>

                <header class="header">
                    <div class="header_wrap">
                        <div class="room_code">
                            <span class="string">
                                <% if(locals.roomCode) { %>
                                    <%= roomCode %>
                                        <% } %>
                            </span>
                            <button id="action_copy" class="btn copy_btn">
                                <span><i class="far fa-clone"></i></span>
                            </button>
                        </div>

                        <button id="action_list" class="btn list_btn">
                            <span><i class="far fa-address-book"></i></span>
                        </button>
                    </div>
                </header>
                <script>
                    setTimeout(() => document.querySelector('.header').classList.add('visible'), 200);
                </script>
                <div class="videos_wrap">
                </div>
                <nav class="users_list">
                    <div class="list_header">
                        <div class="list_header_wrap">
                            <button id="action_list_close" class="btn list_close_btn">
                                <span>접기</span>
                            </button>
                        </div>
                    </div>
                    <div class="list_body">
                        <ul class="users">

                        </ul>
                    </div>
                </nav>
    </div>
</body>
<script src="../javascripts/types.js"></script>
<script src="../javascripts/chaton.js"></script>
<script src="../javascripts/actions.js"></script>
<script src="../javascripts/ui_events.js"></script>

</html>